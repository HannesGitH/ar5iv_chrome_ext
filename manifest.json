// logo taken from https://www.w3.org/html/logo/downloads/HTML5_Badge_128.png

{
  "name": "arxiv -> ar5iv",
  "description": "Automatically replace arxiv links with ar5iv",
  "version": "1.0.0.1",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icon128.png"
  },
  "permissions": [
    "webRequest",
    "*://arxiv.org/*",
    "*://www.arxiv.org/*",
    "webRequestBlocking",
    "*://ar5iv.org/*",
    "*://www.ar5iv.org/*"
  ],
  "icons": {"128": "icon128.png"}
}
